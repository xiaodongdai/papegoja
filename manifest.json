{
  "manifest_version": 2,

  "name": "papegoja_svt",
  "description": "This extension allows the user to repeat a part of the svt video",
  "version": "1.0",

  "web_accessible_resources": ["circle.png", "letter_a.png", "pause.png", "arrow_left_A.png", "arrow_left_B.png", "arrow_right_A.png", "arrow_right_B.png"],
  //"background": {"scripts":["background.js"]},
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {"scripts":["background.js"]},
  "content_scripts": [
    {
     "matches": ["*://*.svtplay.se/video/*"],
     "css": ["inject.css"],
     "js": ["inject.js"],
     "run_at": "document_start",
     "all_frames" : true
    }
  ],
  "browser_action": {
    "default_icon": "circle.png"
    //"default_popup": "changeLang.html"
  }
}
